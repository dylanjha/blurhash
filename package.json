{
  "private": true,
  "name": "@mux/mux-player-next",
  "version": "0.1.0",
  "description": "A NextJS module for the Mux video player",
  "repository": "https://github.com/muxinc/nextjs-static-player.git",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*" : {
      "mux-player-next": [
        "dist/index.d.ts"
      ]
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "workspaces": [
    "./",
    "example/"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint src/*",
    "test": "npm run lint",
    "dev": "tsc --watch",
    "build": "npm run build:cjs",
    "build:cjs": "tsc"
  },
  "author": "@muxinc",
  "license": "MIT",
  "peerDependencies": {
    "@types/react": "^17.0.0 || ^18",
    "@types/react-dom": "^17.0.0 || ^18",
    "next": "^11.0.1 || ^12",
    "react": "^17.0.2 || ^18",
    "react-dom": "^17.0.2 || ^18"
  },
  "devDependencies": {
    "@mux/mux-player-react": "^0.1.0-beta.26",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "8.22.0",
    "next": "12.2.5",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.7.4"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true
  },
  "eslintConfig": {
    "globals": {
      "globalThis": "writable"
    },
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
}
